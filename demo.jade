    script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js")

    //- Component version
    script(src="sortable-grid.js")
    script.
      var table = document.querySelector('#ex1');
      new SortableGrid(table);

    //- jQuery plugin version
    script(src="sortable-grid.jquery.js")
    script.
      $('#ex2').sortableGrid();
